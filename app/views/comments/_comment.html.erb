<div class="row comment-fix"> <!--add comment-fix for comments.coffee-->
  
  <div class="col-md-2 col-md-offset">
    <section class="chef_info center">
      <%= gravatar_for(comment.chef, size: 60) %>
    </section>
  </div>
  
  <div class="well col-md-8">
    <p><%= comment.description %></p>
    <p><span class="quiet"><small>
      Created: <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.chef.chefname.capitalize %>
    </small></span></p>
  </div>

</div>