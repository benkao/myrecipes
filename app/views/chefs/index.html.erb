<%= render 'shared/page_title', title: "Showing all chefs" %>
<div align="center">
  <div align='center'><%= will_paginate %></div>
  <% @chefs.each do |chef| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
            <li><%= link_to gravatar_for(chef), chef_path(chef) %></li>
            <li class="class-title"><%= link_to chef.chefname, chef_path(chef) %></li>
            <li><small><%= pluralize(chef.recipes.count, "recipe") if chef.recipes %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <div align='center'><%= will_paginate %></div>
</div>